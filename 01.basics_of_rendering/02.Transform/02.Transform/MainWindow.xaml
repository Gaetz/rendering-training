<Window x:Class="_02.Transform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02.Transform"
        mc:Ignorable="d"
        Title="Intro to rendering" Height="600" Width="800">
    <Canvas ClipToBounds="True">
        <Ellipse Canvas.Left="10" Canvas.Top="10" Width="80" Height="80" Fill="LightGray" />

        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="4" ScaleY="4" CenterX="0" CenterY="0" />
                <TranslateTransform X="200" Y="60" />
            </TransformGroup>
        </Canvas.RenderTransform>
    </Canvas>
</Window>
